{
    "name": "starter/php-jwt-rbac",
    "description": "Pure PHP JWT Auth + RBAC Starter Kit",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 src tests",
        "fix": "phpcbf --standard=PSR12 src tests"
    },
    "config": {
        "optimize-autoloader": true
    }
}
